{
  "name": "hexo-shiro-blog",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build:theme": "tailwindcss -i ./themes/shiro/source/css/_tailwind.css -o ./themes/shiro/source/css/style.min.css --minify",
    "build": "npm run build:theme && npx hexo generate", // 先编译主题CSS，再生成Hexo静态文件
    "clean": "npx hexo clean",
    "dev": "npx hexo server"
  },
  "engines": {
    "node": ">=14"
  },
  "dependencies": {
    "hexo": "^7.3.0",
    "hexo-cli": "^4.3.0",
    "hexo-generator-archive": "^2.0.0",
    "hexo-generator-category": "^2.0.0",
    "hexo-generator-index": "^3.0.0",
    "hexo-generator-tag": "^2.0.0",
    "hexo-renderer-ejs": "^2.0.0",
    "hexo-renderer-marked": "^6.0.0",
    "hexo-renderer-stylus": "^3.0.0",
    "hexo-server": "^3.0.0",
    "tailwindcss": "^3.4.0" // Shiro主题依赖Tailwind CSS
  }
}
